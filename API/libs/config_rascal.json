
{
    "$schema": "../node_modules/rascal/lib/config/schema.json",
    
    "vhosts": {
      "/": {
        "publicationChannelPools": {
          "confirmPool": {
            "autostart": true
          }
      },
        "connection": {
          "url": "amqp://guest:guest@localhost:54396",
          "options":{
            "heartbeat": 10
          },
          "socketOptions":{
            "timeout": 1000
          }
        },
        "exchanges": ["notification"],
        "queues": ["notification_q"],
        "bindings": ["notification[p] -> notification_q"],
        "publications": {
          "notification_pub": {
            "exchange": "notification",
            "routingKey": "p",
            "options":{
                "persistent": false
            }
          }
        },
        "subscriptions": {
          "notification_sub": {
            "queue": "notification_q"
          }
        }
      }
    }
  }